---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<MainLayout title="About | Senuri Perera">
  <Header />
  <main>
    <section class="about">
      <h1>About Me</h1>
      <div class="about-content">
        <p>This is the about page. Add your personal information here.</p>
      </div>
    </section>
  </main>
  <Footer />
</MainLayout>

<style>
  .about {
    min-height: 70vh;
    padding: 4rem 0;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .about-content {
    max-width: 800px;
    line-height: 1.6;
  }
</style>
