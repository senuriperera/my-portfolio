---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Education from "../components/Education.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";

const projects = [
  {
    title: "Online Movie Ticket Booking System using Java",
    description:
      "A robust web-based application designed to streamline movie ticket booking, food preordering, and seat reservations.",
    githubLink: "https://github.com/sadeesacs/Zion-Cinema.git",
    projectName: "Zion Cinema",
    highlights: [
      "Integrated secure PayPal payment system",
      "Real-time seat selection and booking",
      "Food pre-ordering system",
      "Admin dashboard for movie management",
      "User profile and booking history",
    ],
    technologies: [
      "Java",
      "Servlets",
      "JSP",
      "MySQL",
      "HTML/CSS",
      "JavaScript",
      "PayPal API",
    ],
  },
  {
    title: "Student GPA and University semester grades analyzing app",
    description:
      "A web based application designed to manage and analyze student GPAs and university semester grades.",
    githubLink:
      "https://github.com/RajanithBandara/WindowsApplicationProject.git",
    projectName: "UniTrack",
    highlights: [
      "Automated GPA calculation",
      "Student and course management",
      "Data visualization with Oxyplot",
      "Customizable user settings",
      "Data backup and restore",
    ],
    technologies: [
      "C#",
      ".NET",
      "WinForms",
      "SQL Server",
      "Oxyplot",
      "Entity Framework",
    ],
  },
  {
    title: "E-Commerce Platform",
    description:
      "A full-featured online shopping platform with user authentication and payment integration.",
    githubLink: "https://github.com/yourusername/ecommerce",
    projectName: "ShopEase",
    highlights: [
      "User authentication",
      "Shopping cart functionality",
      "Product search and filtering",
      "Order management",
      "Review system",
    ],
    technologies: ["React", "Node.js", "MongoDB", "Express", "Stripe", "JWT"],
  },
  {
    title: "Weather Dashboard",
    description:
      "A weather forecasting application that provides real-time weather data and forecasts.",
    githubLink: "https://github.com/yourusername/weather-app",
    projectName: "WeatherNow",
    highlights: [
      "Real-time weather updates",
      "5-day forecast",
      "Location-based weather",
      "Weather maps",
      "Temperature tracking",
    ],
    technologies: ["JavaScript", "Weather API", "HTML5", "CSS3", "Chart.js"],
  },
];
---

<MainLayout title="Portfolio | Senuri Perera">
  <Header />
  <main>
    <Hero />
    <Education />

    <section id="projects" class="container">
      <h2>Projects</h2>
      <div class="projects-grid">
        {
          projects.map((project, index) => (
            <ProjectCard
              title={project.title}
              description={project.description}
              githubLink={project.githubLink}
              projectName={project.projectName}
              highlights={project.highlights}
              technologies={project.technologies}
              isReversed={index % 2 !== 0}
            />
          ))
        }
      </div>
    </section>

    <Contact />
  </main>
  <Footer />
</MainLayout>

<style>
  main {
    padding: 1rem 0;
  }

  #projects {
    margin: 8rem 0;
  }

  #projects h2 {
    font-size: 2rem;
    margin-bottom: 3rem;
    position: relative;
  }

  #projects h2::after {
    content: "";
    position: absolute;
    bottom: -15px;
    left: 0;
    width: 60px;
    height: 4px;
    background-color: var(--accent);
    border-radius: 2px;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 2rem;
    width: 100%;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
</style>
