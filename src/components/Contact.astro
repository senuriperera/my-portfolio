<section id="contact">
  <h2>Contact</h2>

  <div class="contact-content">
    <p>
      I'm currently looking to join a cross-functional team that values
      improving people's lives through accessible design, or have a project in
      mind? Let's connect!
    </p>

    <div class="social-links">
      {
        socialLinks.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="social-card"
            aria-label={link.platform}
          >
            <div class="card-content">
              <div class="icon" set:html={link.icon} />
              <div class="link-text">
                <span class="platform">{link.platform}</span>
                <span class="label">{link.label}</span>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  #contact {
    margin: 8rem 0;
    padding-bottom: 4rem;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 3rem;
    position: relative;
  }

  h2::after {
    content: "";
    position: absolute;
    bottom: -15px;
    left: 0;
    width: 60px;
    height: 4px;
    background-color: var(--accent);
    border-radius: 2px;
  }

  .contact-content {
    max-width: 700px;
  }

  .contact-content p {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .contact-number {
    font-size: 1.2rem;
    font-weight: 500;
    color: var(--accent);
    margin-bottom: 2rem;
  }

  .social-links {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    column-gap: 1.75rem; // horizontal gap remains the same
    row-gap: 1rem;    // reduced vertical gap between rows
    margin-top: 2rem;
    max-width: 800px; // slightly increased to accommodate spacing
    margin-left: auto;
    margin-right: auto;
    padding: 1rem; // added padding around the grid
  }

  .social-card {
    position: relative;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    padding: 0.5rem; // reduced from 1rem
    overflow: hidden;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid rgba(138, 79, 255, 0.2);
    margin: 0.5rem 0; // added vertical margin to each card
  }

  .social-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(138, 79, 255, 0.15);
    border-color: var(--accent);
  }

  .social-card::before,
  .social-card::after {
    display: none;
  }

  .card-content {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    gap: 1rem; // reduced from 2rem
    padding: 0.75rem; // reduced from 1rem
  }

  .link-text {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .platform {
    color: #fff;
    font-weight: 500;
    font-size: 1.1rem; // reduced from 1.2rem
    margin-bottom: 0.3rem;
  }

  .label {
    color: #aaa;
    font-size: 0.85rem; // reduced from 0.9rem
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
    min-width: 28px; // reduced from 32px
  }

  .icon svg {
    width: 20px; // reduced from 24px
    height: 20px; // reduced from 24px
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 768px) {
    .social-links {
      grid-template-columns: 1fr; // on mobile, stack cards vertically
      gap: 1rem; // consistent gap for mobile
      padding: 0.5rem; // reduced padding for mobile
    }
  }
</style>
