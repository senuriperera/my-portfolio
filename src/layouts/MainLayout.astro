---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --background: #0e0b1a;
    --text: #ffffff;
    --accent: #8a4fff;
    --secondary: #464069;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: var(--background);
    color: var(--text);
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  a {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--text);
  }

  section {
    margin: 5rem 0;
  }

  h1,
  h2,
  h3 {
    margin-bottom: 1.5rem;
  }
</style>
